<Application x:Class="Mestr.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Mestr.UI"
             xmlns:views="clr-namespace:Mestr.UI.View"
             xmlns:viewmodels="clr-namespace:Mestr.UI.ViewModels">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Mestr.UI;component/Component/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type viewmodels:ProjectViewModel}">
                <views:ProjectView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
                <views:DashboardView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ProjectDetailViewModel}">
                <views:ProjectDetailView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ClientViewModel}">
                <views:ClientView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:EconomyViewModel}">
                <views:EconomyWindow/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
