<Window x:Class="Mestr.UI.View.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}"        
        Width="500"
        Background="#F9FAFB"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        SizeToContent="Height"
        MaxHeight="800"
        Language="da-DK">

    <ScrollViewer VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">

        <StackPanel Margin="25">

            <TextBlock Text="Tilføj ny klient" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#333" 
                       Margin="0,0,0,20"/>

            <!-- Company Name -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Firmanavn (valgfrit)" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="companyNameBox"
                             Grid.Row="0"
                             Text="{Binding CompanyName, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="35"/>
                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding Path=(Validation.Errors), ElementName=companyNameBox}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="#E02020" FontSize="11" Margin="0,2,0,0" Text="{Binding ErrorContent}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </StackPanel>

            <!-- Contact Person -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Kontaktperson *" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="contactPersonBox"
                             Grid.Row="0"
                             Text="{Binding ContactPerson, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="35"/>
                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding Path=(Validation.Errors), ElementName=contactPersonBox}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="#E02020" FontSize="11" Margin="0,2,0,0" Text="{Binding ErrorContent}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </StackPanel>

            <!-- Email -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Email *" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="emailBox"
                             Grid.Row="0"
                             Text="{Binding Email, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="35"/>
                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding Path=(Validation.Errors), ElementName=emailBox}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="#E02020" FontSize="11" Margin="0,2,0,0" Text="{Binding ErrorContent}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </StackPanel>

            <!-- Phone Number -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Telefonnummer *" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="phoneBox"
                             Grid.Row="0"
                             Text="{Binding PhoneNumber, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="35"/>
                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding Path=(Validation.Errors), ElementName=phoneBox}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="#E02020" FontSize="11" Margin="0,2,0,0" Text="{Binding ErrorContent}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </StackPanel>

            <!-- Address -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Adresse" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Address, UpdateSourceTrigger=LostFocus}"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Height="35"/>
            </StackPanel>

            <!-- Postal Code and City -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Postnr." FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding PostalCode, UpdateSourceTrigger=LostFocus}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="35"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="By" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding City, UpdateSourceTrigger=LostFocus}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="35"/>
                </StackPanel>
            </Grid>

            <!-- CVR -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="CVR (valgfrit)" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                <TextBox Text="{Binding CVR, UpdateSourceTrigger=LostFocus}"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Height="35"/>
            </StackPanel>

            <TextBlock Text="* Påkrævet felt" 
                       FontSize="11" 
                       Foreground="#666" 
                       FontStyle="Italic" 
                       Margin="0,0,0,10"/>

            <Border BorderThickness="0,1,0,0" BorderBrush="#E5E7EB" Padding="0,20,0,0" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Slet" 
                            Width="100" 
                            Margin="0,0,10,0"
                            Command="{Binding DeleteCommand}"
                            Style="{StaticResource ModernButtonStyle}"/>
                    <Button Content="Annuller" 
                            Width="100" 
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource ModernButtonStyle}"/>
                    <Button Content="Gem" 
                            Width="100" 
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Window>