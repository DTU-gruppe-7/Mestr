<UserControl x:Class="Mestr.UI.View.AddNewProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Language="da-DK">

    <Grid Background="#FFF5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="10">
            <Button Content="Home" 
                    Command="{Binding NavigateToDashboardCommand}" 
                    DockPanel.Dock="Left"
                    Style="{StaticResource HomeButtonStyle}"/>
            <TextBlock Text="Nyt projekt" DockPanel.Dock="Top"
                       FontSize="20" FontWeight="SemiBold"
                       HorizontalAlignment="Center" Foreground="#1E293B"/>
        </DockPanel>

        <!-- Main Content -->
        <Border Grid.Row="1" Background="White" Margin="20" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270"
                                  ShadowDepth="5" Opacity="0.25" BlurRadius="20"/>
            </Border.Effect>

            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*" MaxWidth="400" MinWidth="250"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Oprettelse af nyt projekt"
                               FontSize="16" Margin="0,0,0,20"
                               Foreground="#1E293B" FontWeight="SemiBold"/>

                    <!-- Project Name -->
                    <TextBlock Text="PROJEKTNAVN" Foreground="#475569" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Grid Margin="0 0 0 15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Input -->
                            <RowDefinition Height="20"/>
                            <!-- Fixed space for error -->
                        </Grid.RowDefinitions>
                        <TextBox x:Name="NameBox"
                                 Grid.Row="0"
                                 Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Height="30"/>
                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding Path=(Validation.Errors), ElementName=NameBox}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="Red" FontSize="11" Text="{Binding ErrorContent}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                    <!-- Client Selection -->
                    <TextBlock Text="KUNDE" Foreground="#475569" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Grid Margin="0 0 0 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                        <ComboBox x:Name="ClientBox"
                            Grid.Row="0"
                              ItemsSource="{Binding Clients}"
                              SelectedItem="{Binding SelectedClient, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                              DisplayMemberPath="Name"
                              Height="30">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                        <ItemsControl Grid.Row="1"
                  ItemsSource="{Binding Path=(Validation.Errors), ElementName=ClientBox}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="Red" FontSize="11" Text="{Binding ErrorContent}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                    <!-- Add New Client Button -->
                    <Button Content="Opret ny kunde" 
          Command="{Binding OpenAddClientWindowCommand}"
          HorizontalAlignment="Left"
          Margin="0,0,0,30"
          Padding="10,5"
          FontSize="12"
          Foreground="#3B82F6"
          Background="Transparent"
          BorderBrush="#3B82F6"
          BorderThickness="1"
          Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  CornerRadius="4"
                                  Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EFF6FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Deadline -->
                    <TextBlock Text="DEADLINE" Foreground="#475569" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Grid Margin="0 0 0 15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                        <DatePicker x:Name="DeadlineBox"
                                    Grid.Row="0"
                                    SelectedDate="{Binding Deadline, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                    Style="{StaticResource ModernDatePickerStyle}"
                                    Height="40"
                                    Language="da-DK"/>
                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding Path=(Validation.Errors), ElementName=DeadlineBox}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="Red" FontSize="11" Text="{Binding ErrorContent}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </StackPanel>

                <!-- Right Column -->
                <Grid Grid.Column="2" Margin="20,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="1" Text="BESKRIVELSE" Foreground="#475569" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="2"
                             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Annuller" 
                    Command="{Binding NavigateToDashboardCommand}" 
                    Margin="0,0,10,0"
                    Style="{StaticResource ModernButtonStyle}"/>
            <Button Content="Opret projekt" 
                    Command="{Binding CreateProjectCommand}"
                    Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>