<UserControl x:Class="Mestr.UI.View.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:Mestr.UI.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#F5F7FA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Navigation Top Bar -->
        <Border Grid.Row="0" Style="{StaticResource NavigationBarStyle}">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Projekter" 
                    Style="{StaticResource NavTabButtonStyle}"
                    Tag="Active"/>

                    <Button Content="Kunder" 
                    Style="{StaticResource NavTabButtonStyle}"
                    Command="{Binding NavigateToClientsCommand}"/>
                </StackPanel>

                <Button Command="{Binding OpenCompanyInfoCommand}"
                Style="{StaticResource IconButton}"
                ToolTip="Virksomhedsindstillinger"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="10,0">
                    <Path Data="{StaticResource SettingsIconGeometry}"
                  Fill="{StaticResource PrimaryBrush}"
                  Width="24"
                  Height="24"
                  Stretch="Uniform"/>
                </Button>
            </Grid>

        </Border>

        <!-- Main Content with consistent margins -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" MinHeight="400" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" MinWidth="400" />
                <ColumnDefinition Width="3*" MinWidth="300" />
            </Grid.ColumnDefinitions>

            <!-- Button and Filter panel -->
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                        Orientation="Horizontal" 
                        Margin="0,0,0,15">

                <Button Content="Tilføj projekt" 
                        Command="{Binding NavigateToProjectCommand}"
                        Style="{StaticResource PrimaryActionButton}"
                        HorizontalAlignment="Left" 
                        Margin="0,0,20,0"/>

                <!-- Filter Section -->
                <Border Style="{StaticResource FilterContainerStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Vis status:" 
                                   FontWeight="SemiBold" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"
                                   Foreground="#1E293B"/>

                        <CheckBox Content="Planlagt" 
                                  IsChecked="{Binding ShowPlanlagt}"
                                  Margin="0,0,10,0"
                                  VerticalAlignment="Center"
                                  Foreground="#1E293B"/>

                        <CheckBox Content="Aktiv" 
                                  IsChecked="{Binding ShowAktiv}"
                                  Margin="0,0,10,0"
                                  VerticalAlignment="Center"
                                  Foreground="#1E293B"/>

                        <CheckBox Content="Aflyst" 
                                  IsChecked="{Binding ShowAflyst}"
                                  Margin="0,0,15,0"
                                  VerticalAlignment="Center"
                                  Foreground="#1E293B"/>

                        <!-- Toggle button - teksten ændrer sig dynamisk -->
                        <Button Content="{Binding ShowAllButtonText}" 
                                Command="{Binding ShowAllCommand}"
                                Style="{StaticResource FilterToggleButton}"/>
                    </StackPanel>
                </Border>

            </StackPanel>

            <!-- Projects DataGrid -->
            <Border Grid.Row="1" Grid.Column="0" 
                    Style="{StaticResource CardBorderStyle}"
                    Margin="0,0,10,0"
                    MinHeight="400">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.Resources>
                        <Style x:Key="RowStyle" TargetType="DataGridRow" BasedOn="{StaticResource DataGridRowStyle}">
                            <EventSetter Event="MouseLeftButtonUp" Handler="ProjectRow_MouseLeftButtonUp" />
                        </Style>
                    </Grid.Resources>

                    <TextBlock Grid.Row="0"
                               Text="Mine projekter" 
                               Style="{StaticResource SectionTitleStyle}"/>

                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Projects}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserSortColumns="True"
                              BorderThickness="0"
                              Background="Transparent"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#EAEBEE"
                              ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                              CellStyle="{StaticResource DataGridCellStyle}"
                              RowStyle="{StaticResource RowStyle}"
                              Margin="15,0,15,15">
                        <DataGrid.InputBindings>
                            <MouseBinding MouseAction="LeftDoubleClick"
                                          Command="{Binding ViewProjectDetailsCommand}"
                                          CommandParameter="{Binding SelectedItem.Uuid, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                        </DataGrid.InputBindings>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Projekt Navn" Binding="{Binding Name}" SortMemberPath="Name" Width="2*" />
                            <DataGridTextColumn Header="Kunde" Binding="{Binding Client.Name}" SortMemberPath="Client.Name" Width="*" />
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" SortMemberPath="Status" Width="*" />
                            <DataGridTextColumn Header="Deadline" Binding="{Binding EndDate, StringFormat={}{0:dd-MM-yyyy}}" SortMemberPath="EndDate" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Completed Projects DataGrid -->
            <Border Grid.Row="1" Grid.Column="1" 
                    Style="{StaticResource CardBorderStyle}"
                    Margin="10,0,0,0"
                    MinHeight="400">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.Resources>
                        <Style x:Key="RowStyleCompleted" TargetType="DataGridRow" BasedOn="{StaticResource DataGridRowStyle}">
                            <EventSetter Event="MouseLeftButtonUp" Handler="ProjectRow_MouseLeftButtonUp" />
                        </Style>
                    </Grid.Resources>

                    <TextBlock Grid.Row="0"
                               Text="Afsluttede projekter" 
                               FontSize="22" 
                               FontWeight="SemiBold" 
                               Margin="15,20,0,0" 
                               Foreground="#333"/>

                    <Separator Grid.Row="1"
                               Background="#EAEBEE"
                               Margin="15,0,15,10"/>

                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding CompletedProjects}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserSortColumns="True"
                              BorderThickness="0"
                              Background="Transparent"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#EAEBEE"
                              ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                              CellStyle="{StaticResource DataGridCellStyle}"
                              RowStyle="{StaticResource RowStyleCompleted}"
                              Margin="15,0,15,15">
                        <DataGrid.InputBindings>
                            <MouseBinding MouseAction="LeftDoubleClick"
                                          Command="{Binding ViewProjectDetailsCommand}"
                                          CommandParameter="{Binding SelectedItem.Uuid, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                        </DataGrid.InputBindings>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Navn" Binding="{Binding Name}" SortMemberPath="Name" Width="*" />
                            <DataGridTextColumn Header="Kunde" Binding="{Binding Client.Name}" SortMemberPath="Client.Name" Width="*" />
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" SortMemberPath="Status" Width="*" />
                            <DataGridTemplateColumn Header="Resultat" SortMemberPath="Result" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Result, StringFormat='{}{0:C}'}" 
                                                   Foreground="{Binding ResultColor}"
                                                   FontWeight="SemiBold"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>