<UserControl x:Class="Mestr.UI.View.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:viewmodels="clr-namespace:Mestr.UI.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#F5F7FA">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" 
        Content="Tilføj projekt" 
        Command="{Binding NavigateToProjectCommand}"
        HorizontalAlignment="Left" 
        Margin="0,0,0,15"
        Background="#0057E8" 
        Foreground="White" 
        BorderThickness="0" 
        Padding="14,8" 
        FontWeight="SemiBold"
        Cursor="Hand">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>

        <Border Grid.Row="1" Grid.Column="0" 
                Background="White" 
                CornerRadius="8" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1"
                Margin="0,0,10,0">
            <Border.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="80"/>
                </Style>
            </Border.Resources>
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  Direction="270" 
                                  ShadowDepth="5" 
                                  Opacity="0.25" 
                                  BlurRadius="20"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Mine projekter" 
                           FontSize="25" 
                           FontWeight="SemiBold" 
                           Margin="15,20,0,10" 
                           Foreground="#1E293B"/>

                <ListBox ItemsSource="{Binding Projects}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" />
                                <Button Content="View Details" 
                        Command="{Binding DataContext.ViewProjectDetailsCommand, 
                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding Uuid}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" 
                Background="White" 
                CornerRadius="8" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1"
                Margin="10,0,0,0">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  Direction="270" 
                                  ShadowDepth="5" 
                                  Opacity="0.25" 
                                  BlurRadius="20"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Afsluttede projekter" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           Margin="15,20,0,0" 
                           Foreground="#333"/>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding CompletedProjects}"
                         BorderThickness="0"
                         Background="Transparent"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" 
                                       Margin="15,5" 
                                       FontSize="14"
                                       Foreground="#555"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>