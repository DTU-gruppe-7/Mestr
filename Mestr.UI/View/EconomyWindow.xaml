<Window x:Class="Mestr.UI.View.EconomyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}"        
        Width="420"
        Background="#F9FAFB"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        SizeToContent="Height"
        MaxHeight="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">

        <StackPanel Margin="25">

            <TextBlock Text="Tilføj post" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#333" 
                       Margin="0,0,0,20"/>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Transaktionstype" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <ComboBox Grid.Row="0"
                              ItemsSource="{Binding TransactionTypes}"
                              SelectedItem="{Binding SelectedTransactionType}"
                              IsEnabled="{Binding IsTypeEnabled}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Height="35"/>
                </Grid>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Beskrivelse" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="descriptionBox"
                             Grid.Row="0"
                             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="35"/>
                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding Path=(Validation.Errors), ElementName=descriptionBox}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="#E02020" FontSize="11" Margin="0,2,0,0" Text="{Binding ErrorContent}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Beløb" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="amountBox"
                             Grid.Row="0"
                             Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="35"
                             PreviewTextInput="AmountBox_PreviewTextInput"
                             DataObject.Pasting="AmountBox_Pasting"
                             TextChanged="AmountBox_TextChanged"/>
                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding Path=(Validation.Errors), ElementName=amountBox}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="#E02020" FontSize="11" Margin="0,2,0,0" Text="{Binding ErrorContent}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </StackPanel>

            <StackPanel Margin="0,0,0,15" Visibility="{Binding CategoryVisibility}">
                <TextBlock Text="Kategori" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <ComboBox Grid.Row="0"
                              ItemsSource="{Binding Categories}"
                              SelectedItem="{Binding SelectedCategory}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Height="35"/>
                </Grid>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Dato" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <DatePicker Grid.Row="0"
                                SelectedDate="{Binding Date, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                Style="{StaticResource ModernDatePickerStyle}"
                                Height="35"/>
                </Grid>
            </StackPanel>

            <Border BorderThickness="0,1,0,0" BorderBrush="#E5E7EB" Padding="0,20,0,0" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Annuller" 
                            Width="100" 
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            Opacity="0.8"/>
                    <Button Content="Gem" 
                            Width="100" 
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Window>