<UserControl x:Class="Mestr.UI.View.ProjectDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Navigation Top Bar -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1"
                Padding="20,0">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  Direction="270" 
                                  ShadowDepth="2" 
                                  Opacity="0.1" 
                                  BlurRadius="8"/>
            </Border.Effect>
            
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Projekter" 
                            Style="{StaticResource NavTabButtonStyle}"
                            Command="{Binding NavigateToDashboardCommand}"/>
                    
                    <Button Content="Kunder" 
                            Style="{StaticResource NavTabButtonStyle}"
                            IsEnabled="False"
                            Opacity="0.6"/>
                </StackPanel>

                <Button Command="{Binding OpenCompanyInfoCommand}"
                        Style="{StaticResource IconButton}"
                        ToolTip="Virksomhedsindstillinger"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="10,0">
                    <Path Data="M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8M12,10A2,2 0 0,0 10,12A2,2 0 0,0 12,14A2,2 0 0,0 14,12A2,2 0 0,0 12,10M10,22C9.75,22 9.54,21.82 9.5,21.58L9.13,18.93C8.5,18.68 7.96,18.34 7.44,17.94L4.95,18.95C4.73,19.03 4.46,18.95 4.34,18.73L2.34,15.27C2.21,15.05 2.27,14.78 2.46,14.63L4.57,12.97L4.5,12L4.57,11L2.46,9.37C2.27,9.22 2.21,8.95 2.34,8.73L4.34,5.27C4.46,5.05 4.73,4.96 4.95,5.05L7.44,6.05C7.96,5.66 8.5,5.32 9.13,5.07L9.5,2.42C9.54,2.18 9.75,2 10,2H14C14.25,2 14.46,2.18 14.5,2.42L14.87,5.07C15.5,5.32 16.04,5.66 16.56,6.05L19.05,5.05C19.27,4.96 19.54,5.05 19.66,5.27L21.66,8.73C21.79,8.95 21.73,9.22 21.54,9.37L19.43,11L19.5,12L19.43,13L21.54,14.63C21.73,14.78 21.79,15.05 21.66,15.27L19.66,18.73C19.54,18.95 19.27,19.04 19.05,18.95L16.56,17.95C16.04,18.34 15.5,18.68 14.87,18.93L14.5,21.58C14.46,21.82 14.25,22 14,22H10M11.25,4L10.88,6.61C9.68,6.86 8.62,7.5 7.85,8.39L5.44,7.35L4.69,8.65L6.8,10.2C6.4,11.37 6.4,12.64 6.8,13.8L4.68,15.36L5.43,16.66L7.86,15.62C8.63,16.5 9.68,17.14 10.87,17.38L11.24,20H12.76L13.13,17.39C14.32,17.14 15.37,16.5 16.14,15.62L18.57,16.66L19.32,15.36L17.2,13.81C17.6,12.64 17.6,11.37 17.2,10.2L19.31,8.65L18.56,7.35L16.15,8.39C15.38,7.5 14.32,6.86 13.12,6.62L12.75,4H11.25Z"
                          Fill="{StaticResource PrimaryBrush}"
                          Width="24"
                          Height="24"
                          Stretch="Uniform"/>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="10,0,10,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBox Text="{Binding Project.Name, UpdateSourceTrigger=PropertyChanged, FallbackValue='Projekt Navn'}"
                     FontSize="24" 
                     FontWeight="SemiBold"
                     Foreground="#1E293B"
                     HorizontalAlignment="Center"
                     HorizontalContentAlignment="Center"
                     Background="Transparent"
                     BorderThickness="0"
                     BorderBrush="Gray"
                     MinWidth="200"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <TextBlock Text="Status: " FontSize="14" Foreground="#555" VerticalAlignment="Center"/>
                        <ComboBox ItemsSource="{Binding AvailableStatuses}"
                                  SelectedItem="{Binding Project.Status, Mode=TwoWay}"
                                  Style="{StaticResource InlineComboBoxStyle}"
                                  ItemContainerStyle="{StaticResource InlineComboBoxItemStyle}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock FontSize="14" Foreground="#555" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <Run Text="Kunde: "/>
                        <Run Text="{Binding Project.Client.Name}"/>
                    </TextBlock>
                </StackPanel>

                <Button Grid.Column="2"
                        VerticalAlignment="Center"
                       Command="{Binding ToggleProjectStatusCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource LinkButton}">
                            <Setter Property="Content" Value="Afslut projekt"/>

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsProjectCompleted}" Value="True">
                                    <Setter Property="Content" Value="Genåbn projekt"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>


            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="8"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Padding="25">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.25" BlurRadius="20"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="PROJEKTOVERSIGT" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#888"
                               Margin="0,0,0,10"/>

                    <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
                        <TabItem Header="Indtægter &amp; Udgifter" IsSelected="True">
                            <TabItem.Style>
                                <Style TargetType="TabItem">
                                    <Setter Property="Foreground" Value="#1E293B"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="15,10"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TabItem">
                                                <Grid>
                                                    <Border Name="Border"
                                                            Background="#F5F7FA"
                                                            BorderBrush="#E0E0E0"
                                                            BorderThickness="0,0,0,2"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter ContentSource="Header"
                                                                          HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="BorderBrush" Value="#1E293B"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TabItem.Style>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.Resources>
                                    <Style x:Key="HeaderStyle" TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="#1E293B"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="10"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridColumnHeader">
                                                    <Grid>
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                Padding="{TemplateBinding Padding}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <ContentPresenter VerticalAlignment="Center"/>
                                                                <Path x:Name="SortArrow"
                                                                      Margin="5,0,0,0"
                                                                      VerticalAlignment="Center"
                                                                      Width="8"
                                                                      Height="10"
                                                                      Stretch="Fill"
                                                                      Visibility="Collapsed"
                                                                      Fill="#1E293B"
                                                                      Data="M 0 4 L 4 0 L 8 4 Z"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="SortDirection" Value="Ascending">
                                                            <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                                                            <Setter TargetName="SortArrow" Property="Data" Value="M 0 4 L 4 0 L 8 4 Z"/>
                                                        </Trigger>
                                                        <Trigger Property="SortDirection" Value="Descending">
                                                            <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                                                            <Setter TargetName="SortArrow" Property="Data" Value="M 0 0 L 4 4 L 8 0 Z"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>

                                    <Style x:Key="CellStyle" TargetType="DataGridCell">
                                        <Setter Property="Padding" Value="10" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </Style>
                                    
                                    <Style x:Key="RowStyle" TargetType="DataGridRow">
                                        <Setter Property="Cursor" Value="Hand" />
                                        <EventSetter Event="MouseLeftButtonUp" Handler="Row_MouseLeftButtonUp"/>

                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F4F8" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    
                                    <Style x:Key="ListTitle" TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="18"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#333"/>
                                        <Setter Property="Margin" Value="0,0,0,8"/>
                                    </Style>
                                </Grid.Resources>

                                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Indtægter -->
                                        <StackPanel Width="440" Margin="0,0,20,0">
                                            <TextBlock Text="Indtægter" Style="{StaticResource ListTitle}"/>
                                            <DataGrid ItemsSource="{Binding Earnings}"
                                                  AutoGenerateColumns="False"
                                                  IsReadOnly="True"
                                                  CanUserSortColumns="True"
                                                  BorderThickness="0"
                                                  Background="Transparent"
                                                  HeadersVisibility="Column"
                                                  GridLinesVisibility="Horizontal"
                                                  HorizontalGridLinesBrush="#EAEBEE"
                                                  ColumnHeaderStyle="{StaticResource HeaderStyle}"
                                                  CellStyle="{StaticResource CellStyle}"
                                                  RowStyle="{StaticResource RowStyle}">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Navn" Binding="{Binding Description}" Width="*" />
                                                    <DataGridTextColumn Header="Estimat" Binding="{Binding Amount, StringFormat='{}{0:C}'}" Width="*" />
                                                    <DataGridTextColumn Header="Dato" Binding="{Binding Date, StringFormat={}{0:dd-MM-yyyy}}" Width="*" />
                                                    <DataGridCheckBoxColumn Header="Faktureret" Binding="{Binding IsPaid}" Width="Auto" />
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>

                                        <!-- Udgifter -->
                                        <StackPanel Width="440">
                                            <TextBlock Text="Udgifter" Style="{StaticResource ListTitle}" Margin="0,0,0,8"/>
                                            <DataGrid ItemsSource="{Binding Expenses}"
                                                    AutoGenerateColumns="False"
                                                    IsReadOnly="True"
                                                    CanUserSortColumns="True"
                                                    BorderThickness="0"
                                                    Background="Transparent"
                                                    HeadersVisibility="Column"
                                                    GridLinesVisibility="Horizontal"
                                                    HorizontalGridLinesBrush="#EAEBEE"
                                                    ColumnHeaderStyle="{StaticResource HeaderStyle}"
                                                    CellStyle="{StaticResource CellStyle}"
                                                    RowStyle="{StaticResource RowStyle}">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Kategori" Binding="{Binding Category}" SortMemberPath="Category" Width="*" />
                                                    <DataGridTextColumn Header="Beskrivelse" Binding="{Binding Description}" SortMemberPath="Description" Width="*" />
                                                    <DataGridTextColumn Header="Beløb" Binding="{Binding Amount, StringFormat='{}{0:C}'}" SortMemberPath="Amount" Width="*" />
                                                    <DataGridTextColumn Header="Dato" Binding="{Binding Date, StringFormat={}{0:dd-MM-yyyy}}" SortMemberPath="Date" Width="*" />
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </StackPanel>
                                </ScrollViewer>

                                <Grid Grid.Row="1" Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Content="Tilføj ny post..."
                                            Style="{StaticResource LinkButton}"
                                            Command="{Binding ShowEconomyWindowCommand}"
                                            HorizontalAlignment="Left"/>

                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <TextBlock Text="Gevinst/Tab: " FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Project.Result, StringFormat='{}{0:C}'}" FontSize="16" FontWeight="SemiBold" Foreground="{Binding Project.ResultColor}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Beskrivelse">
                            <TabItem.Style>
                                <Style TargetType="TabItem">
                                    <Setter Property="Foreground" Value="#1E293B"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="15,10"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TabItem">
                                                <Grid>
                                                    <Border Name="Border"
                                                            Background="#F5F7FA"
                                                            BorderBrush="#E0E0E0"
                                                            BorderThickness="0,0,0,2"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter ContentSource="Header"
                                                                          HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="BorderBrush" Value="#1E293B"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TabItem.Style>

                            <Grid Margin="0,15,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Deadline Section -->
                                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                                    <TextBlock Text="DEADLINE" 
                                               Foreground="#475569" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,5"/>
                                    <DatePicker SelectedDate="{Binding Project.EndDate, UpdateSourceTrigger=PropertyChanged}"
                                                Style="{StaticResource ModernDatePickerStyle}"
                                                Height="40"
                                                Language="da-DK"
                                                HorizontalAlignment="Left"
                                                MinWidth="250"/>
                                </StackPanel>

                                <!-- Description Section -->
                                <TextBlock Grid.Row="1"
                                           Text="PROJEKTBESKRIVELSE"
                                           Foreground="#475569"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>

                                <TextBox Grid.Row="2"
                                         Text="{Binding Project.Description, UpdateSourceTrigger=PropertyChanged}"
                                         Background="White"
                                         Foreground="#1E293B"
                                         BorderBrush="#E0E0E0"
                                         BorderThickness="1"
                                         Padding="12"
                                         FontSize="14"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         AcceptsReturn="True"
                                         MinHeight="300"/>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Kunde">
                            <TabItem.Style>
                                <Style TargetType="TabItem">
                                    <Setter Property="Foreground" Value="#1E293B"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="15,10"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TabItem">
                                                <Grid>
                                                    <Border Name="Border"
                                                            Background="#F5F7FA"
                                                            BorderBrush="#E0E0E0"
                                                            BorderThickness="0,0,0,2"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter ContentSource="Header"
                                                                          HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="BorderBrush" Value="#1E293B"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TabItem.Style>

                            <Grid Margin="0,15,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="Kundeoplysninger"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="#333"
                                           Margin="0,0,0,20"/>

                                <StackPanel Grid.Row="1" MaxWidth="600" HorizontalAlignment="Left">
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Navn:" FontWeight="SemiBold" Foreground="#555" FontSize="14"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Project.Client.Name}" Foreground="#1E293B" FontSize="14"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Email:" FontWeight="SemiBold" Foreground="#555" FontSize="14"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Project.Client.Email}" Foreground="#1E293B" FontSize="14"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Telefon:" FontWeight="SemiBold" Foreground="#555" FontSize="14"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Project.Client.PhoneNumber}" Foreground="#1E293B" FontSize="14"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Adresse:" FontWeight="SemiBold" Foreground="#555" FontSize="14"/>
                                        <TextBlock Grid.Column="1" Foreground="#1E293B" FontSize="14" TextWrapping="Wrap">
                                            <Run Text="{Binding Project.Client.Address}"/>
                                            <Run Text=","/>
                                            <Run Text="{Binding Project.Client.PostalAddress}"/>
                                            <Run Text="{Binding Project.Client.City}"/>
                                        </TextBlock>
                                    </Grid>

                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="CVR:" FontWeight="SemiBold" Foreground="#555" FontSize="14"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Project.Client.Cvr}" Foreground="#1E293B" FontSize="14"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>


            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Generer faktura"
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding GenerateInvoiceCommand}"
                            HorizontalAlignment="Left"
                            Padding="14,8"
                            Margin="0,0,10,0"/>

                    <Button Content="Slet Projekt"
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding DeleteProjectCommand}"
                            HorizontalAlignment="Left"
                            Padding="14,8"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Annuller"
                            Style="{StaticResource LinkButton}"
                            Command="{Binding NavigateToDashboardCommand}"
                            Margin="0,0,20,0"
                            VerticalAlignment="Center"/>

                    <Button Content="Gem" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding SaveProjectDetailsCommand}"
                            Padding="20,8"
                            VerticalAlignment="Center">
                    </Button>
                </StackPanel>

            </Grid>
        </Grid>
    </Grid>
</UserControl>