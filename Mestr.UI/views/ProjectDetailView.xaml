<UserControl x:Class="Mestr.UI.views.ProjectDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#F5F7FA">

	<UserControl.Resources>
		<Style x:Key="LinkButton" TargetType="Button">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="#0057E8"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<TextBlock x:Name="ContentText"
                                   Text="{TemplateBinding Content}"
                                   Foreground="{TemplateBinding Foreground}"/>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="ContentText" Property="TextDecorations" Value="Underline"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</UserControl.Resources>


	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Grid Grid.Row="0" Margin="10,0,10,20">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<Button Grid.Column="0"
                    Content="HOME"
                    Style="{StaticResource LinkButton}"
                    Command="{Binding GåTilHomeCommand}"
                    VerticalAlignment="Center"/>

			<StackPanel Grid.Column="1" HorizontalAlignment="Center">
				<TextBlock Text="{Binding SelectedProject.Navn, FallbackValue='Projekt Navn'}"
                           FontSize="24" FontWeight="SemiBold"
                           Foreground="#1E293B"
                           HorizontalAlignment="Center"/>
				<TextBlock Text="{Binding SelectedProject.Status, FallbackValue='Status'}"
                           FontSize="14"
                           Foreground="#555"
                           HorizontalAlignment="Center"/>
			</StackPanel>

			<Button Grid.Column="2"
                    Content="Afslut projekt"
                    Style="{StaticResource LinkButton}"
                    Command="{Binding AfslutProjektCommand}"
                    VerticalAlignment="Center"/>
		</Grid>


		<Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="25">
			<Border.Effect>
				<DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.25" BlurRadius="20"/>
			</Border.Effect>

			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0"
                           Text="BESKRIVELSE"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#888"
                           Margin="0,0,0,15"/>

				<Grid Grid.Row="1" VerticalAlignment="Top">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="2*" MinWidth="150"/>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="1*"/>
					</Grid.ColumnDefinitions>

					<TextBlock Grid.Row="0" Grid.Column="0" Text="Felt navn" FontWeight="SemiBold" Foreground="#333" Margin="5"/>
					<TextBlock Grid.Row="0" Grid.Column="1" Text="Estimat" FontWeight="SemiBold" Foreground="#333" Margin="5"/>
					<TextBlock Grid.Row="0" Grid.Column="2" Text="Nuværende forbrug" FontWeight="SemiBold" Foreground="#333" Margin="5"/>
					<TextBlock Grid.Row="0" Grid.Column="3" Text="Faktureret beløb" FontWeight="SemiBold" Foreground="#333" Margin="5"/>

					<TextBlock Grid.Row="1" Grid.Column="0" Text="Indtægter" Margin="5,10,5,5" FontSize="16"/>
					<TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding EstimatIndtægter, StringFormat=C}" Margin="5,10,5,5" FontSize="16"/>
					<TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding NuværendeIndtægter, StringFormat=C}" Margin="5,10,5,5" FontSize="16"/>
					<TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding FaktureretIndtægter, StringFormat=C}" Margin="5,10,5,5" FontSize="16"/>

					<TextBlock Grid.Row="2" Grid.Column="0" Text="Udgifter" Margin="5,10,5,5" FontSize="16"/>
					<TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding EstimatUdgifter, StringFormat=C}" Margin="5,10,5,5" FontSize="16"/>
					<TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding NuværendeUdgifter, StringFormat=C}" Margin="5,10,5,5" FontSize="16"/>
					<TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding FaktureretUdgifter, StringFormat=C}" Margin="5,10,5,5" FontSize="16"/>

				</Grid>

				<Grid Grid.Row="2">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<Button Grid.Column="0"
                            Content="Tilføj ny post..."
                            Style="{StaticResource LinkButton}"
                            Command="{Binding TilføjPostCommand}"
                            HorizontalAlignment="Left"/>

					<StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
						<TextBlock Text="Gevinst/Tab: " FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
						<TextBlock Text="{Binding GevinstTab, StringFormat=C}" FontSize="16" FontWeight="SemiBold" Foreground="#008800" VerticalAlignment="Center"/>
					</StackPanel>
				</Grid>

			</Grid>
		</Border>


		<Grid Grid.Row="2" Margin="0,20,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<Button Grid.Column="0"
                    Content="Generer faktura"
                    HorizontalAlignment="Left"
                    Background="#0057E8"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="14,8"
                    FontWeight="SemiBold"
                    Cursor="Hand">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="8"/>
					</Style>
				</Button.Resources>
			</Button>

			<StackPanel Grid.Column="2" Orientation="Horizontal">
				<Button Content="Annullere"
                        Style="{StaticResource LinkButton}"
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"/>

				<Button Content="Gem"
                        Background="#0057E8"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,8"
                        FontWeight="SemiBold"
                        Cursor="Hand">
					<Button.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="8"/>
						</Style>
					</Button.Resources>
				</Button>
			</StackPanel>

		</Grid>
	</Grid>
</UserControl>